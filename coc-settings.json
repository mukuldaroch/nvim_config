{
    "languageserver": {
        "python": {
            "command": "python",
            "args": ["-m", "pyright-langserver", "--stdio"],
            "filetypes": ["python"],
            "settings": {
                "python": {
                    "analysis": {
                        "typeCheckingMode": "strict",
                        "autoSearchPaths": true,
                        "useLibraryCodeForTypes": true
                    }
                }
            }
        }
    },
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true
}
